    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/hkcam/main.go",
            "env": {},
            "args": []
        },
        {
            "name": "Remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "${config:remote_debug_host}",
            "trace": "verbose",
            "remotePath": "/home/${config:remote_debug_user}/go/src/hkcam/",
            "preLaunchTask": "launch",
        }
    ]
}